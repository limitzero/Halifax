<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Halifax.NHibernate.Tests"
                   namespace="Halifax.NHibernate.Tests.Domain.InventoryManangement.ReadModel"
                   default-lazy="false">

  <!-- entity: Product -->
  <class name="Product" table="Product">

    <id name="Id" column="Id" type="System.Guid" >
      <generator class="assigned" />
    </id>

    <!-- properties for entity 'Product' -->
    <property name="Name" column="name" type="String" length="255"  />
	<property name="Description" column="description" type="String" length="255"  />
  </class>

</hibernate-mapping>

