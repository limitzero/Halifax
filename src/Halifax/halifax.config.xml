<configuration>
  <facilities>

    <facility id="halifax">

      <event-bus isAsync="true" />
      
      <!-- the endpoints section will need to be added for the async event bus
      note: the scheduled option is created by default with a one second polling interval
      if the concurrency or scheduled node is not explicitly specified.
      Ex:
      <endpoints>
        <add name="{namespace or partial namespace to messages}"
                 uri="{server name@queue name}">
                 <concurrency 
                    max="{1..10}" // number of worker threads on queue
                    wait="{1..10}" // wait time in seconds in between worker thread execution
                    />
                   or 
                 <scheduled
                    interval="{1..10}" // wait time in seconds to periodically inspect queue
        </add>
      </endpoints>
      -->
      <endpoints>
        <add name="Halifax.Tests"
                 uri="localhost@halifax.tests"/>
      </endpoints>

      <!-- add the assemblies that contain all of the exposed messages (i.e. command and events and other serializable types) -->
      <messages>
        <add name="Halifax.Tests" />
      </messages>
      
      <!-- add the assemblies that contain your command consumers 
      <command-handlers>
        <add name="Halifax.Tests" />
      </command-handlers>
      -->
      
      <!-- add the assemblies that contain your event message consumers
      <event-handlers>
        <add name="Halifax.Tests" />
      </event-handlers>
      -->
      
    </facility>

  </facilities>

  <components>

  </components>

</configuration>