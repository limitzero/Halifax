<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Halifax"
                   namespace="Halifax.Storage.Events.PersistableEvent"
                   default-lazy="false">

  <!-- entity: PersistableEvent -->
  <class name="PersistableEvent" table="Events">

    <id name="Id" column="Id" type="System.Guid" access="nosetter.camelcase-underscore">
      <generator class="identity" />
    </id>

    <!-- properties for entity 'PersistableEvent' -->
    <property name="EventSourceId" column="eventSourceId" type="System.Guid"  />
    <property name="Version" column="version" type="System.Int32" />
    <property name="Timestamp" column="timeStamp" type="System.DateTime"  />
    <property name="Data" column="data" type="System.Byte[]" length="8500"  />
    <property name="Name" column="name" type="String" length="255"  />
    
  </class>

</hibernate-mapping>

